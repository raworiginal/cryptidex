<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/_html-head.ejs', {title: 'Sign-in'}) %>
  <body>
    <header><%- include('../partials/_nav-bar.ejs') %></header>
    <main class="container">
      <article>
        <form action="/auth/sign-in" method="POST">
          <fieldset>
            <h1 class="title">Sign in</h1>
            <label class="label" for="username">Username:</label>
            <input class="username" type="text" name="username" id="username" />
            <label class="label" for="password">Password:</label>
            <input
              class="password"
              type="password"
              name="password"
              id="password"
            />
          </fieldset>
          <div class="control">
            <button class="button submit is-link" type="submit">Sign in</button>
          </div>
        </form>
      </article>
    </main>
    <footer><%- include("../partials/_footer.ejs") %></footer>
  </body>
</html>
